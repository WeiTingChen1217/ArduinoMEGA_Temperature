    mylcd.Set_Text_colour(CYAN);
    char buf[8];
    sprintf(buf, "%d%%", h);
    mylcd.Print_String(buf, 40, y - 6);
  }
}

void drawGraphFromSD() {
  const int MAX_POINTS = GRAPH_W;
