      if (sscanf(buf, "%d-%d-%d %d:%d:%d", &sd_year, &sd_month, &sd_day, &sd_hour, &sd_minute, &sd_second) == 6) {
        sd_datetime = DateTime(sd_year, sd_month, sd_day, sd_hour, sd_minute, sd_second);
