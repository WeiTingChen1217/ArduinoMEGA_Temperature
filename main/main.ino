  int tick_interval = MAX_POINTS / TICK_COUNT;

  struct Tick { int x; DateTime time; } ticks[TICK_COUNT + 1];
  int tick_index = 0;

  char line[96];
  while (file.available() && index < MAX_POINTS) {
    size_t len = file.readBytesUntil('\n', line, sizeof(line) - 1);
    if (len == 0) break;
